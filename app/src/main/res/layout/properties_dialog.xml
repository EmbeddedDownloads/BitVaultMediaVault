<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/alertTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alert_title_top_margin"
        android:gravity="center"
        android:text="Properties"
        android:textColor="@color/light_black"
        android:textSize="@dimen/alert_title_size"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alertTitle"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTitle"
            style="@style/font_properties_dialog1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/name"
            style="@style/font_properties_dialog2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/parentTitle"
            style="@style/font_properties_dialog1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10" />

        <TextView
            android:id="@+id/parentName"
            style="@style/font_properties_dialog2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sizeTitle"
            style="@style/font_properties_dialog1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10" />

        <TextView
            android:id="@+id/size"
            style="@style/font_properties_dialog2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/durationTitle"
            style="@style/font_properties_dialog1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10" />

        <TextView
            android:id="@+id/duration"
            style="@style/font_properties_dialog2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lastModifiedTitle"
            style="@style/font_properties_dialog1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10" />

        <TextView
            android:id="@+id/lastModified"
            style="@style/font_properties_dialog2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/alert_yes_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llLayout"
        android:layout_margin="@dimen/alert_yes_button_margin"
        android:gravity="center"
        android:background="@drawable/ripple_bottom"
        android:padding="@dimen/alert_yes_btn_padding"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:textSize="@dimen/alert_yes_btn_text_size" />
</RelativeLayout>
